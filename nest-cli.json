{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "templates/**/*.hbs", "outDir": "dist/src" },
      { "include": "images/*", "outDir": "dist/src" }
    ],
    "watchAssets": true
  }
}
